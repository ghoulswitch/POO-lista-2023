package Interface;

import java.awt.Container;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JTextField;

public class Formulário extends JFrame implements ActionListener {
	
	public Formulário() {
		//título da janela
		setTitle("Formulário de Cadastro de Usuário");
		//horizontal, vertical
		setSize(600, 550);
		//ação do usuário mudar o tamanho da janela
		setResizable(false);
		setDefaultCloseOperation(EXIT_ON_CLOSE);

    //não mostra na janela(???)
		JLabel lblNome = new JLabel("Nome:");
		lblNome.setSize(80, 50);
		lblNome.setLocation(15, 2);
		
		JTextField textField = new JTextField();
		textField.setLocation(100, 15);
		textField.setSize(100, 25);
	}
	
	@Override
	//método obrigatório do ActionListener
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		
	}
}
